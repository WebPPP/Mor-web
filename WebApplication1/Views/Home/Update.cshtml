@model WebApplication1.Models.User
@using MongoDB.Bson;
<body>

    <h1>Uptading user</h1>
    <br />
    @using (Html.BeginForm("Update", "Home", FormMethod.Post, new { id = "contact" }))

    {
        
        <div class="form-group ">
            @Html.LabelFor(model=>model.name)
            @Html.EditorFor(model => model.name,new { @class = "form-control", placeholder = Model.name, Id = "contact_name" })
            <span class="error_show"> @Html.ValidationMessageFor(x => x.name) </span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model=>model.Email, new { @class = "form-control ", placeholder = Model.Email, Id = "contact_email" })
            <span class="error_show"> @Html.ValidationMessageFor(x => x.Email) </span>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password)
            @Html.EditorFor(model => model.password,new { @class = "form-control ", placeholder = Model.password, Id = "contact_password" })
            <span class="error_show"> @Html.ValidationMessageFor(x => x.password) </span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.gender)
            @Html.CheckBoxFor(model => model.gender, new { title = "check the box if you are a man" })
        </div>
        <div class="form-group" id="contact_submit">
                @Html.Hidden( Model.id.ToString())
                <input class="btn btn-primary" type="submit" value="Save"/>

            </div>
    }
    </body>
